#!/bin/sh

export HI_DPI_FACTOR=2

[[ -z $SCREEN_DPI ]] && export SCREEN_DPI=72

if [[ -n $HI_DPI_FACTOR ]]; then
	export GDK_SCALE=$HI_DPI_FACTOR
	export GDK_DPI_SCALE=$((1 / $HI_DPI_FACTOR))
else
	export GDK_SCALE=1
	export GDK_DPI_SCALE=1
fi

export QT_AUTO_SCREEN_SCALE_FACTOR=1

newdpi=$(($SCREEN_DPI * $GDK_SCALE))

xrandr --dpi $newdpi \
       --setprovideroutputsource modesetting NVIDIA-0 \
       --output eDP-1-1 --primary --mode 2880x1620 --pos 0x0 --rotate normal \
       --output DP-1-3-1 --off
	
# Comment out to use Xresources colors/settings on startup
xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources &&
	echo "Xft.dpi: $newdpi" | xrdb -merge
