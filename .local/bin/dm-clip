#!/usr/bin/env bash

if [ "$1" = "clear" ] ; then
	[ "$(printf "No\\nYes" | dmenu -i -p "Clear clipboard history?")" = "Yes" ] && pkill greenclip && greenclip clear && greenclip daemon

	exit 0
fi

greenclip print | sed '/^$/d' | dmenu -i -l 40 -p clipboard | xargs -r -d'\n' -I '{}' greenclip print '{}'
