#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="🕛" ;;
	"01") icon="🕐" ;;
	"02") icon="🕑" ;;
	"03") icon="🕒" ;;
	"04") icon="🕓" ;;
	"05") icon="🕔" ;;
	"06") icon="🕕" ;;
	"07") icon="🕖" ;;
	"08") icon="🕗" ;;
	"09") icon="🕘" ;;
	"10") icon="🕙" ;;
	"11") icon="🕚" ;;
	"12") icon="🕛" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s|..27m|</span></b>|")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "📅 Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Get the current time
current_hour=$(date "+%H")
current_minute=$(date "+%M")

# Check if the current time matches the target time
#!/bin/bash

input_file="input.mp3"
start_time="00:01:30"  # Start playing from 1 minute and 30 seconds

[[ "$current_hour" -eq 18 && "$current_minute" -eq 30 ]] && \
	notify-send "Time to call it a day soon..." && \
	ffmpeg -i "$HOME/r2d2.mp3" -ss "00:00:02" -to "00:00:07" -af "volume=5"  -f mp3 - | ffplay -nodisp -autoexit - 2>/dev/null
[[ "$current_hour" -eq 18 && "$current_minute" -eq 45 ]] && \
	notify-send "Time to call it a day in 15 Minutes!" && \
	ffmpeg -i "$HOME/r2d2.mp3" -ss "00:00:08" -to "00:00:12" -af "volume=5"  -f mp3 - | ffplay -nodisp -autoexit - 2>/dev/null
[[ "$current_hour" -eq 19 && "$current_minute" -eq 0 ]] && \
	notify-send "You really need to close down NOW!" && \
	ffmpeg -i "$HOME/r2d2.mp3" -ss "00:00:15.5" -to "00:00:18" -af "volume=5"  -f mp3 - | ffplay -nodisp -autoexit - 2>/dev/null

date "+%b %d (%a) $icon%H:%M"
